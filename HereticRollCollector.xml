<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
  ..\FrameXML\UI.xsd">
    <Script file="HereticRollCollector.lua"/>
    <Button name="HereticRollFrameTemplate" virtual="true" movable="true" clampedToScreen="true">
        <Size x="170" y="20"/>
        <Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="10"/>
            </EdgeSize>
            <Color r="0" g="0" b="0"/>
            <Bordercolor r="0.2" g="0.2" b="0.2"/>
            <BackgroundInsets>
                <AbsInset left="1" right="1" top="1" bottom="1"/>
            </BackgroundInsets>
        </Backdrop>

        <Layers>
            <Layer level="ARTWORK">
                <FontString name="$parentName" inherits="GameFontNormalSmall" justifyH="LEFT" text="Kerbaal">
                    <Size x="50" y="8"/>
                    <Anchors>
                        <Anchor point="LEFT" relativeTo="$parent" relativePoint="LEFT" x="29" y="0"/>
                    </Anchors>
                </FontString>
                <FontString name="$parentRoll" inherits="GameFontNormalSmall" justifyH="CENTER" text="93">
                    <Size x="20" y="8"/>
                    <Anchors>
                        <Anchor point="LEFT" relativeTo="$parentName" relativePoint="RIGHT" x="2" y="0"/>
                    </Anchors>
                </FontString>
                <FontString name="$parentItemCount" inherits="GameFontNormalSmall" justifyH="CENTER">
                    <Size x="20" y="8"/>
                    <Anchors>
                        <Anchor point="LEFT" relativeTo="$parentRoll" relativePoint="RIGHT" x="2" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad>
                self:RegisterForDrag("LeftButton");
            </OnLoad>
            <OnEnter>
                self:SetBackdropBorderColor(1.0, 1.0, 0.0)
            </OnEnter>
            <OnLeave>
                self:SetBackdropBorderColor(0.2, 0.2, 0.2)
            </OnLeave>
            <OnDragStart function="HereticRollFrame_OnDragStart"/>
            <OnDragStop function="HereticRollFrame_OnDragStop"/>
        </Scripts>
    </Button>

    <Frame name="HereticRollCollectorFrame" parent="UIParent" frameLevel="5" toplevel="true" frameStrata="MEDIUM" movable="true" enableMouse="true" clampedToScreen="true" hidden="false">
        <Size x="190" y="200"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="5"/>
            </EdgeSize>
        </Backdrop>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="HereticRollCollectorTitleText" inherits="GameFontNormal" text="Ketzerischer Wurfsammler" parentKey="TitleText" wordwrap="false" justifyH="LEFT">
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-5"/>
                        <Anchor point="LEFT" x="10"/>
                        <Anchor point="RIGHT" x="-10"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <Frames>
            <Button name="$parent_Close" parentKey="close" inherits="UIPanelCloseButton">
                <Size x="24" y="24"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" relativeTo="HereticFrame">
                        <Offset x="0" y="0"/>
                    </Anchor>
                </Anchors>
            </Button>
            <Button name="HereticRollFrame1" inherits="HereticRollFrameTemplate" id="1">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent" x="10" y="-20"/>
                </Anchors>
            </Button>
            <Button name="HereticRollFrame2" inherits="HereticRollFrameTemplate" id="2">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent" x="10" y="-40"/>
                </Anchors>
            </Button>
            <Button name="HereticRollFrame3" inherits="HereticRollFrameTemplate" id="3">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent" x="10" y="-60"/>
                </Anchors>
            </Button>
            <Button name="HereticRollFrame4" inherits="HereticRollFrameTemplate" id="4">
                <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent" x="10" y="-80"/>
                </Anchors>
            </Button>
        </Frames>
        <Scripts>
            <OnLoad>HereticRollCollectorFrame_OnLoad(self);</OnLoad>
            <OnUpdate function="HereticRollCollectorFrame_OnUpdate"/>
            <OnDragStart>HereticRollCollectorFrame_OnDragStart(self);</OnDragStart>
            <OnDragStop>HereticRollCollectorFrame_OnDragStop(self);</OnDragStop>
        </Scripts>
    </Frame>
</Ui>
