<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
  ..\FrameXML\UI.xsd">
  <Script file="HereticLootButton.lua"/>
  <Button name="HereticLootButton" inherits="LootButtonTemplate" virtual="true">
      <Scripts>
          <OnLoad>
              self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
              self.hasItem = 1;
          </OnLoad>
          <OnEnter>
              HereticLootButton_OnEnter(self, motion)
          </OnEnter>
          <OnLeave>
              GameTooltip:Hide();
              ResetCursor();
          </OnLeave>
          <OnUpdate>
              if ( GameTooltip:IsOwned(self) ) then HereticLootButton_OnEnter(self) end
              CursorOnUpdate(self);
          </OnUpdate>
          <OnClick function="HereticLootButton_OnClick"/>
      </Scripts>
  </Button>

  <Button name="HereticSlotButtonTemplate" virtual="true" hidden="true">
      <Size x="170" y="20"/>
      <Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
          <TileSize>
              <AbsValue val="32"/>
          </TileSize>
          <EdgeSize>
              <AbsValue val="10"/>
          </EdgeSize>
          <Color r="0" g="0" b="0"/>
          <Bordercolor r="0.03" g="0.03" b="0.03"/>
          <BackgroundInsets>
              <AbsInset left="1" right="1" top="1" bottom="1"/>
          </BackgroundInsets>
      </Backdrop>

      <Layers>
          <Layer level="ARTWORK">
              <FontString name="$parentText" inherits="GameFontNormalSmall" justifyH="LEFT">
                  <Size x="154" y="8"/>
                  <Anchors>
                      <Anchor point="LEFT" relativeTo="$parent" relativePoint="LEFT" x="10" y="0"/>
                  </Anchors>
              </FontString>
          </Layer>
      </Layers>
  </Button>

  <Frame name="HereticLootFrame" virtual="true">
    <Size>
      <AbsDimension x="330" y="40"/>
    </Size>
    <Frames>
      <Button name="$parentButton" inherits="HereticLootButton" virtual="true">
        <Anchors>
          <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent">
              <Offset x="0" y="0"/>
          </Anchor>
        </Anchors>
      </Button>
      <Button name="$parentFromButton" inherits="HereticSlotButtonTemplate" hidden="false">
        <Anchors>
          <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="0" y="1"/>
        </Anchors>
      </Button>
      <Button name="$parentSlotButton" inherits="HereticSlotButtonTemplate" hidden="false">
        <Anchors>
          <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="0" y="-19"/>
        </Anchors>
      </Button>
      <Button name="$parentWinnerFrame" inherits="HereticRollFrameTemplate" hidden="true">
        <Anchors>
          <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="0" y="-19"/>
        </Anchors>
      </Button>
    </Frames>
    <Scripts>
      <OnLoad function="HereticLootFrame_OnLoad"/>
    </Scripts>
  </Frame>
</Ui>
